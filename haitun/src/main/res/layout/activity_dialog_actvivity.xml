<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:context="cn.d.yurfe.bgc.pay.DiaLogActvivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dia_pay_top"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/p_top3"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/ib_vip_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/pay_dialog_close_selector"/>
    </RelativeLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#808080" />-->

    <LinearLayout
        android:id="@+id/dialog_ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_pay_back"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/pay_ll_vip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <RadioButton
                            android:id="@+id/rb_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/dia_money_selecor"
                            android:button="@null"
                            android:checked="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/rb_vip"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_vip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开通黄金会员"
                                android:textColor="#000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tv_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="约上百部成人大片永久体验权限"
                                android:textColor="#8C8C8C"
                                android:textSize="14sp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_money_vip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥18.00"
                                android:textColor="#000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tv_money_vip_false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:text="¥36.00"
                                android:textColor="#8C8C8C"
                                android:textSize="14sp"/>


                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/dia_view_serp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#B1B1B1"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/dialog_btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/dialog_pay_confirm_button"
            android:gravity="center_vertical"
            android:onClick="gotoPay"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
            android:text="立即开通"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </LinearLayout>
</LinearLayout>