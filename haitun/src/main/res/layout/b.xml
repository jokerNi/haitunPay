<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B5C63">

    <GridView
        android:id="@+id/fragemnt_b_video_gv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/horizontalSpacing"
        android:listSelector="@android:color/transparent"
        android:numColumns="@string/videoNumColumns"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dip"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/fragment_b_tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="您还没有购买记录"
        android:textColor="@color/white"
        android:textSize="@dimen/video_text_name"/>
</RelativeLayout>